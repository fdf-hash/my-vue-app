{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json"

  ],
  "references": [
    {"path": "./tsconfig.node.json"},
    {"path": "./src/router/tsconfig.json"},
    {"path": "./src/pages/views/tsconfig.json"},
    {"path": "./src/components/tsconfig.json"},
    {"path": "./src/layout/tsconfig.json"},
    {"path": "./src/store/tsconfig.json"},
    {"path": "./src/style/tsconfig.json"},
    {"path": "./src/unit/tsconfig.json"}
  ],
}